{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global deaths by age and sex (1990â€“2023)",
  "width": "container",
  "data": {
    "url": "data/number-of-deaths-world.csv"
  },
  "params": [
    {
      "name": "Year",
      "value": 2023,
      "bind": {"input": "range", "min": 1990, "max": 2023, "step": 1, "name": "Select Year: "}
    }
  ],
  "transform": [
    {"filter": "datum.Time == Year"},
    {
      "aggregate": [{"op": "sum", "field": "Value", "as": "Deaths"}],
      "groupby": ["Time", "Sex", "Age", "AgeStart"]
    },
    {
      "calculate": "datum.Sex === 'Male' ? -datum.Deaths : datum.Deaths",
      "as": "SignedDeaths"
    }
  ],
  "mark": {"type": "bar"},
  "encoding": {
    "y": {
      "field": "Age",
      "type": "ordinal",
      "sort": {"field": "AgeStart", "order": "descending"},
      "title": "Age group"
    },
    "x": {
      "field": "SignedDeaths",
      "type": "quantitative",
      "title": "Deaths",
      "axis": {
        "labelExpr": "abs(datum.value)",
        "format": ","
      }
    },
    "color": {
      "field": "Sex",
      "type": "nominal",
      "scale": {"range": ["#E15759", "#4C78A8"]},
      "title": "Sex"
    },
    "tooltip": [
      {"field": "Age", "title": "Age"},
      {"field": "Sex", "title": "Sex"},
      {"field": "Deaths", "type": "quantitative", "title": "Deaths", "format": ",.0f"},
      {"field": "Time", "title": "Year"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"labelFontSize": 11, "titleFontSize": 12}
  }
}