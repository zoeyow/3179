{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "background":"antiquewhite",
  "data": {"url": "data/total-life-expectancy-at-birth-countries.csv"},
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {"input": "range", "min": 1960, "max": 2023, "step": 1, "name": "Select Year: "}
      }
  ],
  "transform": [
    {"filter": "datum.TIME_PERIOD == Year_selection"}
  ],
  "encoding": {
    "x": {
      "field": "OBS_VALUE",
      "title": "Life Expectancy at birth (years)",
      "bin": {
        "step": 10,                 
        "extent": [10, 90],        
        "nice": false            
      },
      "scale": {"domain": [10, 90]}, 
      "axis": {"labelFlush": true}
    },
    "y": {
      "aggregate": "count",
      "title": "Number of Countries",
      "scale": {"domain": [0, 120]}
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color":{"value": "#F57927"},
        "tooltip": [
          {"aggregate": "count", "type": "quantitative", "format": ",", "title": "Number of Countries"},
          {"field": "SEX_LABEL", "type": "nominal", "title": "Gender"},
          {"field": "TIME_PERIOD", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10},
      "encoding": {
        "text": {"value": "A sudden drop in life"},
        "x": {"value": 150},
        "y": {"value": 30},
        "opacity": {
          "condition": {
            "test": "datum.TIME_PERIOD == 2021",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {"type": "text", "baseline": "middle", "dy": -10},
